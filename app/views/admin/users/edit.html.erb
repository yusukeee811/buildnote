<div class="container">
  <div class="row">
    <div class="col-md-7 mx-auto px-0">
      <h4 class="py-4 mb-0">
        <span class="ml-3 font-weight-bold">
          会員情報詳細
        </span>
      </h4>

      <%= form_with model: @user, local:true do |f| %>
        <div class="row mb-3">
          <div class="col-md-3">
            会員ID
          </div>
          <div class="col-md-8">
            <%= @user.id %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <%= f.label :name, "ユーザー名" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <%= f.label :status, "会員ステータス" %>
          </div>
          <div class="col-md-8">
              <span class="<%= "status-#{@user.status}" %>">
	  	  		    <%= t("enums.user.status.#{@user.status}") %>
	  	  	    </span>
            </div>
        </div>
        <% end %>

          <div class="row mt-4">
            <div class="col-md-3">
              <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success btn-block mt-3" %>
            </div>

            <div class="col-md-6">
              <%= link_to "このユーザーの投稿を見る", user_posts_admin_user_path(@user.id), class: "btn btn-primary btn-block mt-3" %>
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>


