<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto px-0">
      <h4 class="py-4 mb-0">
        <span class="ml-3 font-weight-bold">
          ユーザー情報
        </span>
      </h4>

      <div class="row">
        <div class="col-md-7 px-0">

          <div class="row mb-3">
            <div class="col-md-4">
              ユーザーID
            </div>
            <div class="col-md-8">
              <%= @user.id %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4">
              メールアドレス
            </div>
            <div class="col-md-8">
              <%= @user.email %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4">
              ユーザー名
            </div>
            <div class="col-md-8">
              <%= @user.name %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4">
              ユーザーステータス
            </div>
            <div class="col-md-8">
              <span class="<%= "status-#{@user.status}" %>">
	  	  		    <%= t("enums.user.status.#{@user.status}") %>
	  	  	    </span>
            </div>
          </div>

          <div class="row mt-4">
            <div class="col-md-6">
              <%= link_to "このユーザーの投稿を見る", user_posts_admin_user_path(@user.id), class: "btn btn-primary btn-block mt-3" %>
              <div class="mt-3 text-center">
                <%= link_to "強制退会させますか？", user_unsubscribe_admin_user_path(@user.id) %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-5">
          <%= image_tag @user.get_profile_image(250, 250) %>
        </div>

      </div>

    </div>
  </div>
</div>
