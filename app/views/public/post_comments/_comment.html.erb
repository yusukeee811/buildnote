<!--コメント一覧-->
<div class="row">
  <% post.post_comments.each do |post_comment| %>
  <div class="col-md-9 mt-3">
    <%= link_to user_path(post.user.id), class: "text-dark", style: "text-decoration: none;" do %>
      <%= image_tag post_comment.user.get_profile_image(*25), class: "rounded-circle mr-1" %>
      <%= post_comment.user.name %>
    <% end %>
    &nbsp;&nbsp;<%= post_comment.comment %>
  </div>
  <div class="col-md-3 text-right mt-3">
    <% if post_comment.user == current_user %>
      <%= link_to post_post_comment_path(post_comment.post.id,post_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "text-dark" do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    <% end %>
  </div>
  <% end %>
</div>
<!--コメントフォーム-->
<%= form_with model: [post, post_comment], local: false do |f| %>
<div class="row my-3">
  <div class="col-md-10 pr-1">
    <%= f.text_field :comment, rows: '5', placeholder: "コメントする", class: "form-control" %>
  </div>
  <div class="col-md-2 pl-1">
    <button type="submit" class="btn btn-block btn-primary">
      <i class="far fa-paper-plane"></i>
    </button>
  </div>
<% end %>
</div>