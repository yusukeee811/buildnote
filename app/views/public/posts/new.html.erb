<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto shadow-lg rounded px-0 my-5">
      <h4 class="bg-light py-4 mb-0">
        <span class="ml-3 font-weight-bold">
          新規投稿
        </span>
      </h4>
      <div class="form-body p-4">
      <%= form_with model: @post, local:true do |f| %>
        <div class="form-group">
          <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.text_area :caption, placeholder: "#comment",  class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "投稿する", class: "btn btn-block btn-primary mt-3" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
