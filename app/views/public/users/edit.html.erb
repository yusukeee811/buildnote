<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto shadow-lg rounded px-0 my-5">
      <h4 class="bg-light py-4 mb-0">
        <span class="ml-3 font-weight-bold">
          会員情報編集
        </span>
      </h4>

      <%= render "layouts/error", error_message: @error_message %>

      <div class="form-body p-4">
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "保存する", class: "btn btn-block btn-primary mt-4" %>
        </div>
      <% end %>
        <div class="text-center" style="font-size: small;">
        <%= link_to "退会しますか？", user_unsubscribe_user_path %>
      </div>
    </div>
  </div>
</div>

