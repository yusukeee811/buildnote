<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto px-0">
      <h4 class="py-4 mb-0">
        <span class="ml-3 font-weight-bold">
          いいね投稿一覧
        </span>
      </h4>

      <% @liked_posts.order(created_at: :desc).each do |liked_post| %>
        <%= render 'public/posts/index', post: liked_post %>

        <div class="row mx-2 mt-3" id="post-comments-count_<%= liked_post.id %>">
          <%= render 'public/post_comments/count', post: liked_post, post_comments: @post_comments %>
        </div>

        <%= render 'public/post_comments/form', post: liked_post, post_comment: @post_comment %>
      <% end %>

    </div>
  </div>
</div>